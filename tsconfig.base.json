{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["dom", "esnext"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}
